<resources>

    <!-- 基本属性 -->
    <style name="ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="fw">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wf">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="ff">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="fwh" parent="@style/fw">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="wwh" parent="@style/ww">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="fwv" parent="@style/fw">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ffv" parent="@style/ff">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="ffh" parent="@style/ff">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="wwv" parent="@style/ww">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="www" parent="@style/ww">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="fww" parent="@style/fw">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ffwv" parent="@style/ffw">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="fwwv" parent="@style/fww">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="fwwh" parent="@style/fww">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="ffwh" parent="@style/ffw">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ffw" parent="@style/ff">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="wfw" parent="wf">
        <item name="android:layout_weight">1</item>
    </style>
    <style name="wfv" parent="@style/wf">
        <item name="android:orientation">vertical</item>
    </style>
    <style name="wfh" parent="@style/wf">
        <item name="android:orientation">horizontal</item>
    </style>

    <!--透明样式-->
    <style name="TransparencyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--无边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景颜色：透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="Dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyDialog" parent="android:Theme.Dialog" >
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- activity不变暗 -->
    </style>

    <!-- 横线-->
    <style name="tv_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <!-- 白横线-->
    <style name="tv_line_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">#50ffffff</item>
    </style>

    <!-- 灰竖线-->
    <style name="tv_line_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <!-- 白竖线-->
    <style name="tv_line_vertical_white">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ffffff</item>
    </style>

</resources>
